// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// model:tableのこと
// @id:主キー, @default(autoincrement()):自動採番
model User {
  id    Int     @id @default(autoincrement())
  email  String @unique
  password String
  createdAt DateTime @default(now())
}
