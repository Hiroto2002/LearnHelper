// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// model:tableのこと
// @id:主キー, @default(autoincrement()):自動採番
model User {
  id    Int     @id @default(autoincrement())
  email  String @unique
  password String
  createdAt DateTime @default(now())
  posts Post[]
  techs Tech[]
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  priority  Int
  content   String
  getContent String
  createdAt DateTime @default(now())
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
  techs Tech[] 
  needContent NeedContent[]
}
model Tech {
  id        Int      @id @default(autoincrement())
  title     String
  priority  Int
  whyWant   String
  createdAt DateTime @default(now())
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
  posts Post[] 
}

model NeedContent {
  id        Int      @id @default(autoincrement())
  title      String
  author Post @relation(fields: [authorId], references: [id])
  authorId  Int
  createdAt DateTime @default(now())
}

